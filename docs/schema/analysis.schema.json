{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://hamlet.dev/schemas/analysis/v1",
  "title": "Hamlet Analysis Report",
  "description": "Output of `hamlet analyze`. Describes detected frameworks, file types, and supported conversion directions for a project.",
  "type": "object",
  "required": ["schemaVersion", "meta", "summary", "files"],
  "additionalProperties": false,
  "properties": {
    "schemaVersion": {
      "type": "string",
      "description": "Semantic version of this schema.",
      "const": "1.0.0"
    },
    "meta": {
      "type": "object",
      "required": ["hamletVersion", "nodeVersion", "generatedAt", "root"],
      "additionalProperties": false,
      "properties": {
        "hamletVersion": {
          "type": "string",
          "description": "Hamlet CLI version that produced this report."
        },
        "nodeVersion": {
          "type": "string",
          "description": "Node.js version used."
        },
        "generatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO-8601 timestamp when the report was generated."
        },
        "root": {
          "type": "string",
          "description": "Absolute path to the scanned directory."
        }
      }
    },
    "summary": {
      "type": "object",
      "required": [
        "fileCount",
        "testFileCount",
        "frameworksDetected",
        "directionsSupported",
        "confidenceAvg"
      ],
      "additionalProperties": false,
      "properties": {
        "fileCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Total files scanned."
        },
        "testFileCount": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files classified as tests."
        },
        "frameworksDetected": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Unique frameworks found, sorted alphabetically."
        },
        "directionsSupported": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["from", "to", "pipelineBacked"],
            "additionalProperties": false,
            "properties": {
              "from": { "type": "string" },
              "to": { "type": "string" },
              "pipelineBacked": { "type": "boolean" }
            }
          },
          "description": "Conversion directions available based on detected frameworks."
        },
        "confidenceAvg": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Average confidence across files with non-zero confidence."
        }
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "type", "framework", "candidates", "confidence", "warnings"],
        "additionalProperties": false,
        "properties": {
          "path": {
            "type": "string",
            "description": "Relative path from scanned root."
          },
          "type": {
            "type": "string",
            "description": "Classified file type (test, helper, config, fixture, etc.)."
          },
          "framework": {
            "type": ["string", "null"],
            "description": "Detected framework, or null if unknown."
          },
          "candidates": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["framework", "score"],
              "additionalProperties": false,
              "properties": {
                "framework": { "type": "string" },
                "score": { "type": "number", "minimum": 0 }
              }
            },
            "description": "All frameworks considered with their detection scores."
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Classification confidence (0-100)."
          },
          "warnings": {
            "type": "array",
            "items": { "type": "string" },
            "description": "Non-fatal issues encountered during analysis."
          }
        }
      }
    }
  }
}
