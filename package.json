{
  "name": "hamlet-converter",
  "version": "1.0.0",
  "description": "Hamlet: Bidirectional multi-framework test converter for Cypress, Playwright, and Selenium.",
  "type": "module",
  "main": "src/index.js",
  "types": "src/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./src/types/index.d.ts",
      "import": "./src/index.js"
    },
    "./converters": {
      "import": "./src/converters/index.js"
    },
    "./core": {
      "import": "./src/core/index.js"
    }
  },
  "bin": {
    "hamlet": "bin/hamlet.js"
  },
  "files": [
    "bin",
    "src",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pmclSF/hamlet.git"
  },
  "homepage": "https://github.com/pmclSF/hamlet#readme",
  "bugs": {
    "url": "https://github.com/pmclSF/hamlet/issues"
  },
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "start": "node bin/hamlet.js",
    "lint-staged": "lint-staged",
    "test:staged": "jest --findRelatedTests"
  },
  "keywords": [
    "playwright",
    "cypress",
    "selenium",
    "testing",
    "automation",
    "migration",
    "test-management",
    "visual-testing",
    "test-converter"
  ],
  "author": "pmcISF",
  "license": "MIT",
  "dependencies": {
    "@playwright/experimental-ct-react": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "axe-playwright": "^1.2.3",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fast-glob": "^3.3.3",
    "glob": "^10.3.3",
    "lodash": "^4.17.21",
    "papaparse": "^5.4.1",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "selenium-webdriver": "^4.16.0",
    "typescript": "^5.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.17.23",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^29.15.0",
    "jest": "^29.6.2",
    "lint-staged": "^16.2.7",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "overrides": {
    "signal-exit": "3.0.7"
  }
}
