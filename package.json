{
  "name": "hamlet",
  "version": "1.0.0",
  "description": "To be or not to be... in Playwright. A test converter from Cypress to Playwright.",
  "main": "src/index.js",
  "bin": {
    "hamlet": "./bin/hamlet.js"
  },
  "scripts": {
    "test": "jest --setupFile ./test/setup.js",
    "lint": "eslint src/**/*.js",
    "format": "prettier --write \"src/**/*.js\"",
    "start": "node bin/hamlet.js",
    "lint-staged": "lint-staged",
    "validate": "node src/scripts/validate.js",
    "visual-compare": "node src/scripts/visual-compare.js",
    "generate-types": "node src/scripts/generate-types.js",
    "generate-report": "node src/scripts/generate-report.js",
    "test:staged": "jest --findRelatedTests"
  },
  "keywords": [
    "playwright",
    "cypress",
    "testing",
    "automation",
    "migration",
    "test-management",
    "visual-testing"
  ],
  "author": "pmcISF",
  "license": "MIT",
  "dependencies": {
    "@playwright/experimental-ct-react": "^1.40.0",
    "@playwright/test": "^1.40.0",
    "axe-playwright": "^1.2.3",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "fast-glob": "^3.3.0",
    "glob": "^10.3.3",
    "lodash": "^4.17.21",
    "papaparse": "^5.4.1",
    "pixelmatch": "^5.3.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@types/jest": "^29.5.3",
    "@types/lodash": "^4.14.195",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.2",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
